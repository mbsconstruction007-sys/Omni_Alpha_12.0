# üèÜ OMNI ALPHA 5.0 - PRODUCTION ENVIRONMENT CONFIGURATION
# =========================================================

# Environment Configuration
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
SECRET_KEY=your-super-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/omni_alpha
TIMESCALE_URL=postgresql://user:password@localhost:5433/omni_alpha_timescale
REDIS_URL=redis://localhost:6379/0
MONGODB_URL=mongodb://localhost:27017/omni_alpha

# Database Pool Configuration
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Configuration
REDIS_POOL_SIZE=20
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Security Configuration
CORS_ORIGINS=*
ALLOWED_HOSTS=*
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Performance Configuration
MAX_REQUEST_SIZE=10485760
REQUEST_TIMEOUT=30
KEEP_ALIVE_TIMEOUT=5

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PATH=/metrics
HEALTH_CHECK_INTERVAL=30

# Trading Configuration
DEFAULT_SYMBOL=BTCUSDT
DEFAULT_EXCHANGE=binance
MAX_POSITION_SIZE=10000
RISK_LIMIT=0.02

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=10

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=logs/omni_alpha.log
LOG_ROTATION=daily
LOG_RETENTION=30
