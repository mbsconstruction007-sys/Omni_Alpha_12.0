# Production Environment Configuration
ENVIRONMENT=PRODUCTION
LOG_LEVEL=INFO

# Trading Configuration
MAX_DAILY_LOSS=50000
MAX_POSITION_SIZE=100000
MAX_OPEN_POSITIONS=50
MAX_SINGLE_ORDER_VALUE=50000
MAX_PORTFOLIO_VAR=100000
CIRCUIT_BREAKER_RESET_HOURS=4
CLOSE_POSITIONS_ON_SHUTDOWN=true

# Market Configuration
MARKET_OPEN_HOUR=9
MARKET_OPEN_MINUTE=15
MARKET_CLOSE_HOUR=15
MARKET_CLOSE_MINUTE=30

# Broker Configuration (Production)
BROKER_PROVIDER=UPSTOX
UPSTOX_API_KEY=${UPSTOX_API_KEY}
UPSTOX_API_SECRET=${UPSTOX_API_SECRET}
UPSTOX_REDIRECT_URI=${UPSTOX_REDIRECT_URI}

# Backup Broker
BACKUP_BROKER=ZERODHA
ZERODHA_API_KEY=${ZERODHA_API_KEY}
ZERODHA_API_SECRET=${ZERODHA_API_SECRET}

# Database Configuration
DB_HOST=postgres-service
DB_PORT=5432
DB_NAME=trading_prod
DB_USER=trader
DB_PASSWORD=${DB_PASSWORD}
DB_POOL_SIZE=20

# Redis Configuration
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0

# Kafka Configuration
KAFKA_BROKERS=kafka-service:9092
KAFKA_TOPIC_TICKS=market_ticks
KAFKA_TOPIC_ORDERS=order_events
KAFKA_TOPIC_ALERTS=system_alerts

# Monitoring Configuration
HEALTH_CHECK_INTERVAL_SECONDS=30
PROMETHEUS_PORT=8000
METRICS_RETENTION_DAYS=30

# Alerting Configuration
TELEGRAM_BOT_TOKEN=${TELEGRAM_BOT_TOKEN}
TELEGRAM_CHAT_ID=${TELEGRAM_CHAT_ID}
TELEGRAM_CRITICAL_CHAT_ID=${TELEGRAM_CRITICAL_CHAT_ID}

EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=${EMAIL_FROM}
EMAIL_TO=${EMAIL_TO}
EMAIL_USER=${EMAIL_USER}
EMAIL_PASSWORD=${EMAIL_PASSWORD}

# Security Configuration
SENTRY_DSN=${SENTRY_DSN}
VAULT_URL=http://vault-service:8200
CONSUL_HOST=consul-service
CONSUL_PORT=8500

# Deployment Configuration
DEPLOYMENT_STRATEGY=BLUE_GREEN
CANARY_PERCENT=10
BLUE_GREEN_ENABLED=true
ROLLBACK_THRESHOLD=0.05

# Maintenance
MAINTENANCE_MODE=false
