{
  "dashboard": {
    "id": null,
    "title": "Omni Alpha Trading System",
    "tags": ["trading", "production"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Portfolio P&L",
        "type": "stat",
        "targets": [
          {
            "expr": "portfolio_pnl",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyINR",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": -50000},
                {"color": "yellow", "value": 0},
                {"color": "green", "value": 10000}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Active Positions",
        "type": "stat",
        "targets": [
          {
            "expr": "active_positions",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "System Health",
        "type": "stat",
        "targets": [
          {
            "expr": "system_cpu_usage",
            "refId": "A"
          },
          {
            "expr": "system_memory_usage", 
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Trade Volume",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(trades_total[5m])",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Order Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, order_latency_seconds)",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(errors_total[5m])",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Portfolio Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "portfolio_pnl",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}
