# Omni Alpha 12.0 Environment Configuration

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME=Omni Alpha 12.0
APP_VERSION=12.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# ============================================
# API CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL
DATABASE_URL=postgresql://omni:password@localhost:5432/omni_alpha
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=omni_alpha
POSTGRES_USER=omni
POSTGRES_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MongoDB
MONGODB_URL=mongodb://localhost:27017/omni_alpha
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=omni_alpha

# ============================================
# TRADING CONFIGURATION
# ============================================
# Alpaca Trading
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# Upstox Trading (Indian Markets)
UPSTOX_API_KEY=your_upstox_api_key_here
UPSTOX_SECRET_KEY=your_upstox_secret_key_here
UPSTOX_REDIRECT_URI=http://localhost:8000/auth/upstox/callback

# ============================================
# MARKET DATA CONFIGURATION
# ============================================
# Yahoo Finance
YAHOO_FINANCE_ENABLED=true

# Alpha Vantage
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# IEX Cloud
IEX_CLOUD_API_KEY=your_iex_cloud_key_here

# Polygon.io
POLYGON_API_KEY=your_polygon_key_here

# ============================================
# AI/ML CONFIGURATION
# ============================================
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Hugging Face
HUGGINGFACE_API_KEY=your_huggingface_key_here

# PyTorch
TORCH_DEVICE=cpu
TORCH_THREADS=4

# ============================================
# RISK MANAGEMENT
# ============================================
MAX_POSITION_SIZE=100000
MAX_DAILY_LOSS=50000
MAX_DRAWDOWN=0.10
RISK_FREE_RATE=0.02

# ============================================
# MONITORING & LOGGING
# ============================================
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=omni-alpha-logs

# ============================================
# SECURITY
# ============================================
SECRET_KEY=your_secret_key_here_change_this_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Encryption
ENCRYPTION_KEY=your_encryption_key_here_32_chars

# ============================================
# EXTERNAL SERVICES
# ============================================
# Slack Notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_CHANNEL=#trading-alerts

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=your_email@gmail.com

# AWS (if using cloud services)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=omni-alpha-data

# ============================================
# ECOSYSTEM CONFIGURATION
# ============================================
ECOSYSTEM_NAME=OmniAlpha_Global
TARGET_DAILY_VOLUME=1000000000000
MARKET_SHARE_TARGET=0.10
SYSTEMIC_IMPORTANCE=true
TOO_BIG_TO_FAIL=true

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Testing
TEST_DATABASE_URL=postgresql://omni:password@localhost:5432/omni_alpha_test
TEST_REDIS_URL=redis://localhost:6379/1

# Development Tools
RELOAD=true
AUTO_RELOAD=true
PROFILING_ENABLED=false

# ============================================
# PRODUCTION SETTINGS
# ============================================
# Uncomment and configure for production
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=warning
# SECRET_KEY=your_production_secret_key_here
# DATABASE_URL=postgresql://user:password@prod-db:5432/omni_alpha
# REDIS_URL=redis://prod-redis:6379/0
