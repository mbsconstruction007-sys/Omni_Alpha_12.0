# OMNI ALPHA 5.0 - TRADING BOT CONFIGURATION
# Configure your settings here

# ===========================================
# ALPACA API CONFIGURATION
# ===========================================
# Get your API keys from: https://app.alpaca.markets/
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Trading Mode: 'paper' for testing, 'live' for real money
TRADING_MODE=paper

# ===========================================
# RISK MANAGEMENT SETTINGS
# ===========================================
# Maximum loss per day (in dollars)
MAX_DAILY_LOSS=1000

# Maximum position size (in dollars)
MAX_POSITION_SIZE_DOLLARS=10000

# Maximum number of positions to hold
MAX_POSITIONS=5

# Maximum daily trades
MAX_DAILY_TRADES=20

# Stop loss percentage (0.02 = 2%)
STOP_LOSS=0.02

# Take profit percentage (0.05 = 5%)
TAKE_PROFIT=0.05

# Maximum drawdown percentage (0.02 = 2%)
MAX_DRAWDOWN_PERCENT=0.02

# ===========================================
# TRADING STRATEGY SETTINGS
# ===========================================
# Symbols to scan for trading opportunities
SCAN_SYMBOLS=AAPL,GOOGL,MSFT,TSLA,SPY,QQQ,AMZN,META,NVDA,IWM

# Minimum signal confidence (0.6 = 60%)
MIN_SIGNAL_CONFIDENCE=0.65

# Scan interval in seconds
SCAN_INTERVAL=60

# Position size method: 'fixed', 'kelly', 'combined'
POSITION_SIZE_METHOD=combined

# ===========================================
# SYSTEM SETTINGS
# ===========================================
# Enable simulation mode (true/false)
SIMULATION_MODE=true

# Enable database logging
DATABASE_ENABLED=true

# Enable monitoring
MONITORING_ENABLED=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

