# OMNI ALPHA STEP 1: CORE INFRASTRUCTURE ENVIRONMENT CONFIGURATION
# Copy this file to .env and update with your actual values

# ===================== CORE APPLICATION SETTINGS =====================
ENV=production
APP_NAME=Omni Alpha Enhanced
APP_VERSION=12.0+
DEBUG=false
TESTING=false
TRADING_MODE=paper

# ===================== DATABASE CONFIGURATION =====================
# SQLite (Default for development)
DATABASE_URL=sqlite:///omni_alpha.db

# PostgreSQL (Production recommended)
# DATABASE_URL=postgresql://trader:password@localhost:5432/omni_alpha

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ===================== TRADING CONFIGURATION =====================
MAX_POSITION_SIZE=0.10
MAX_POSITIONS=20
STOP_LOSS_PERCENT=3.0
TAKE_PROFIT_PERCENT=6.0
MAX_DAILY_LOSS=0.05
SCAN_INTERVAL_MINUTES=5
AUTO_TRADE_ENABLED=true

# ===================== API CONFIGURATION =====================
# Alpaca Trading API (REQUIRED)
ALPACA_API_KEY=YOUR_ALPACA_API_KEY_HERE
ALPACA_SECRET_KEY=YOUR_ALPACA_SECRET_KEY_HERE
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Telegram Bot (REQUIRED)
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# Data Sources (Optional)
YAHOO_FINANCE_ENABLED=true
NSE_DATA_ENABLED=true
ALPHA_VANTAGE_KEY=YOUR_ALPHA_VANTAGE_KEY_HERE

# ===================== LOGGING CONFIGURATION =====================
LOG_LEVEL=INFO
LOG_FILE=omni_alpha.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ===================== PERFORMANCE SETTINGS =====================
ENABLE_METRICS=true
METRICS_PORT=8000

# ===================== SECURITY SETTINGS =====================
ENABLE_SECURITY=true
JWT_SECRET_KEY=your_jwt_secret_key_here_change_this_in_production

# ===================== REDIS CONFIGURATION (Optional) =====================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# ===================== MONITORING CONFIGURATION =====================
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
ALERTMANAGER_URL=http://localhost:9093

# ===================== HEALTH CHECK SETTINGS =====================
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ===================== DEVELOPMENT SETTINGS =====================
# Set to true for development mode
DEVELOPMENT_MODE=false
MOCK_APIS=false
ENABLE_DEBUG_LOGGING=false

# ===================== PRODUCTION SETTINGS =====================
# Production-specific settings
PRODUCTION_MODE=true
ENABLE_SSL=true
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# ===================== BACKUP CONFIGURATION =====================
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/path/to/backups

# ===================== NOTIFICATION SETTINGS =====================
EMAIL_NOTIFICATIONS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ===================== ADVANCED SETTINGS =====================
# Thread Pool Settings
MAX_WORKER_THREADS=10
ASYNC_POOL_SIZE=100

# Memory Management
MAX_MEMORY_USAGE_MB=1024
ENABLE_MEMORY_MONITORING=true

# Network Settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1

# ===================== FEATURE FLAGS =====================
ENABLE_ML_FEATURES=true
ENABLE_OPTIONS_TRADING=true
ENABLE_CRYPTO_TRADING=false
ENABLE_FOREX_TRADING=false

# ===================== COMPLIANCE SETTINGS =====================
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_FILE=audit.log
COMPLIANCE_MODE=true
RISK_MANAGEMENT_ENABLED=true

# ===================== TESTING CONFIGURATION =====================
# Test database (only used during testing)
TEST_DATABASE_URL=sqlite:///test_omni_alpha.db
TEST_ALPACA_API_KEY=test_key
TEST_TELEGRAM_BOT_TOKEN=test_token
